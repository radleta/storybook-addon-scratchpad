# EditorConfig is awesome: https://editorconfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript, JavaScript
[*.{ts,tsx,js,mts,cts,mjs,cjs}]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON
[*.json]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # Preserve two spaces for line breaks

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Package files
[{package.json,package-lock.json}]
indent_style = space
indent_size = 2

# Git files
[.gitignore]
indent_style = space
indent_size = 2
