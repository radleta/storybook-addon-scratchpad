{
  "name": "storybook-addon-scratchpad",
  "version": "0.1.1",
  "description": "A Storybook addon for jotting quick notes and feedback on stories, with auto-save and markdown export.",
  "type": "module",
  "main": "dist/manager.js",
  "types": "dist/manager.d.ts",
  "exports": {
    ".": {
      "require": "./preset.cjs",
      "types": "./dist/manager.d.ts",
      "import": "./dist/manager.js"
    },
    "./manager": {
      "types": "./dist/manager.d.ts",
      "import": "./dist/manager.js"
    },
    "./preset": "./preset.cjs",
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test",
    "pack:dry": "npm pack --dry-run",
    "size:check": "npm pack --dry-run 2>&1 | grep 'package size' | head -1 || echo 'Run npm pack to see size'",
    "verify:package": "node scripts/verify-package.js",
    "release:prepare": "npm run validate && npm run build && npm run verify:package && npm run size:check && echo '\nReady for release. Run: npm version [patch|minor|major]'",
    "e2e:8": "node scripts/run-storybook.js 8",
    "e2e:9": "node scripts/run-storybook.js 9",
    "e2e:10": "node scripts/run-storybook.js 10",
    "e2e:8:npm": "node scripts/run-storybook.js 8 --npm",
    "e2e:9:npm": "node scripts/run-storybook.js 9 --npm",
    "e2e:10:npm": "node scripts/run-storybook.js 10 --npm",
    "e2e:install:8": "cd e2e/storybook-8 && npm install",
    "e2e:install:9": "cd e2e/storybook-9 && npm install",
    "e2e:install:10": "cd e2e/storybook-10 && npm install",
    "e2e:install:all": "npm run e2e:install:8 && npm run e2e:install:9 && npm run e2e:install:10",
    "e2e:restore:8": "cd e2e/storybook-8 && npm install storybook-addon-scratchpad@file:../..",
    "e2e:restore:9": "cd e2e/storybook-9 && npm install storybook-addon-scratchpad@file:../..",
    "e2e:restore:10": "cd e2e/storybook-10 && npm install storybook-addon-scratchpad@file:../..",
    "e2e:restore:all": "npm run e2e:restore:8 && npm run e2e:restore:9 && npm run e2e:restore:10",
    "preversion": "npm run validate",
    "version": "node scripts/update-changelog.js $npm_package_version && git add CHANGELOG.md",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm run validate && npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "storybook",
    "storybook-addons",
    "addon",
    "notes",
    "scratchpad",
    "feedback",
    "documentation",
    "review"
  ],
  "homepage": "https://github.com/radleta/storybook-addon-scratchpad#readme",
  "bugs": {
    "url": "https://github.com/radleta/storybook-addon-scratchpad/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/radleta/storybook-addon-scratchpad.git"
  },
  "author": {
    "name": "Richard Adleta",
    "email": "radleta@gmail.com",
    "url": "https://github.com/radleta"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "storybook": "^8.0.0 || ^9.0.0 || ^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^3.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.18.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.4.2",
    "react": "^18.0.0",
    "storybook": "^8.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.0.0"
  },
  "files": [
    "dist/",
    "preset.cjs",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "storybook": {
    "displayName": "Scratchpad",
    "supportedFrameworks": [
      "react",
      "vue",
      "angular",
      "svelte",
      "web-components",
      "html"
    ],
    "icon": "https://raw.githubusercontent.com/radleta/storybook-addon-scratchpad/main/icon.svg"
  }
}
